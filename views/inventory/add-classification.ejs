<link rel="stylesheet" href="/css/add-classification.css">

<%- messages() %>

<% if (message) { %>
  <div class="flash-message"><%= message %></div>
<% } %>

<h1><%= title %></h1>

<form action="/inv/add-classification" method="POST" class="create-form">
  <label for="classification_name">Classification Name:</label>
  <input type="text" id="classification_name" name="classification_name" required value="<%= classification_name %>" />
  <button type="submit">Add Classification</button>
</form>

<h2>Existing Classifications</h2>
<ul class="classifications-container">
  <% classifications.forEach(classification => { %>
    <li>
      <%= classification.classification_name %>
      <form action="/inv/delete-classification/<%= classification.classification_id %>" method="POST" style="display:inline;" class="delete-form">
        <button type="submit" onclick="return confirm('Are you sure you want to delete this classification?')">Delete</button>
      </form>
    </li>
  <% }) %>
</ul>



<script src="/js/add-classification"></script>