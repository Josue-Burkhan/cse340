<link rel="stylesheet" href="/css/add-inventory.css">

<%- messages() %>

<h1>Edit an existing Vehicle</h1>

<form action="/inv/update" method="post" class="add-inventory-form">
    <label for="classification_id">Classification:</label>
    <%- classificationList %>
  
    <label for="inv_make">Make:</label>
    <input type="text" id="inv_make" name="inv_make" value="<%= inv_make %>" minlength="3" required />
  
    <label for="inv_model">Model:</label>
    <input type="text" id="inv_model" name="inv_model" value="<%= inv_model %>" minlength="3" required />
  
    <label for="inv_description">Description:</label>
    <textarea id="inv_description" name="inv_description">
      <%= inv_description || '' %>
    </textarea>
  
    <label for="inv_image">Image Path:</label>
    <input type="text" 
      id="inv_image" 
      name="inv_image"
      value="<%= inv_image || '/images/vehicles/no-image.png' %>" 
    />
    
    <label for="inv_thumbnail">Thumbnail Path:</label>
    <input 
      type="text" 
      id="inv_thumbnail" 
      name="inv_thumbnail" 
      value="<%= inv_thumbnail || '/images/vehicles/no-image.png' %>"  
    />
  
    <label for="inv_price">Price:</label>
    <input type="number" id="inv_price" name="inv_price" value="<%= inv_price %>" step="0.01" required />
  
    <label for="inv_year">Year:</label>
    <input 
      type="text" 
      id="inv_year" 
      name="inv_year" 
      value="<%= inv_year %>" 
      pattern="\d{4}"
      title="Enter a 4-digit year (e.g., 2023)"
      required 
    />
  
    <label for="inv_miles">Miles:</label>
    <input 
      type="number" 
      id="inv_miles" 
      name="inv_miles" 
      value="<%= inv_miles || '' %>" 
    />
  
    <label for="inv_color">Color:</label>
    <input 
      type="text" 
      id="inv_color" 
      name="inv_color" 
      value="<%= inv_color %>" 
      required 
    />
    <%- console.log(inv_make, inv_model, inv_description, inv_price) %>

  
    <button type="submit">Update Vehicle</button>

    <input type="hidden" name="inv_id"
    <% if (locals.inv_id) { %> value="<%= locals.inv_id %>" <% } %> />

  </form>