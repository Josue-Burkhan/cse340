<link rel="stylesheet" href="/css/add-inventory.css">

<%- messages() %>

<% if (message) { %>
  <div class="flash-message"><%= message %></div>
<% } %>

<h1><%= title %></h1>

<form action="/inv/add-inventory" method="POST" enctype="multipart/form-data" class="add-inventory-form">
  <label for="vehicle_make">Make:</label>
  <input type="text" id="vehicle_make" name="vehicle_make" value="<%= vehicle_make %>" required />
  
  <label for="vehicle_model">Model:</label>
  <input type="text" id="vehicle_model" name="vehicle_model" value="<%= vehicle_model %>" required />
  
  <label for="vehicle_year">Year:</label>
  <input type="number" id="vehicle_year" name="vehicle_year" value="<%= vehicle_year %>" required />
  
  <label for="vehicle_price">Price:</label>
  <input type="number" id="vehicle_price" name="vehicle_price" value="<%= vehicle_price %>" required />
  
  <label for="classification_id">Classification:</label>
  <%- classificationList %>

  <label for="vehicle_image">Image:</label>
  <input type="file" id="vehicle_image" name="vehicle_image" accept="image/*" />
  
  <button type="submit">Add Vehicle</button>
</form>
     
<script src="/js/add-inventory.js"></script>
